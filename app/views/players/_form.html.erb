      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, {:end_year => Time.now.year, :start_year => 1900} %>
  </div>
  <div class="field">
    <%= f.label :race %><br />
    <%= f.select :race_id, Race.all.map {|x| [x, x.id]} %>
  </div>
  <div class="field">
    <%= f.label :team %><br />
    <%= f.select :team_id, Team.all.map {|x| [x, x.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
